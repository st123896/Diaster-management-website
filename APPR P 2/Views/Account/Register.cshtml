@model APPR_P_2.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="form-section">
                <h3 class="mb-4"><i class="fas fa-user-plus me-2"></i>Create New Account</h3>

                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, "", new { @class = "validation-summary-errors" })

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "John" })
                            @Html.ValidationMessageFor(m => m.FirstName)
                        </div>
                        <div class="col-md-6 mb-3">
                            @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
                            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Doe" })
                            @Html.ValidationMessageFor(m => m.LastName)
                        </div>
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "name@example.com", type = "email" })
                        @Html.ValidationMessageFor(m => m.Email)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Create a password" })
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    </div>

                    <div class="mb-3 form-check">
                        @Html.CheckBoxFor(m => m.AcceptTerms, new { @class = "form-check-input" })
                        @Html.LabelFor(m => m.AcceptTerms, new { @class = "form-check-label" })
                        @Html.ValidationMessageFor(m => m.AcceptTerms)
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Register</button>

                    <hr class="my-4">

                    <div class="text-center">
                        <p>Already have an account? @Html.ActionLink("Login here", "Login", "Account")</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        // Client-side validation
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}