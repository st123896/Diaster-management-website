@model IEnumerable<APPR_P_2.Models.ApplicationUser>
@{
    ViewBag.Title = "Manage Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-users me-2"></i>Manage Users</h1>
                <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count()</h4>
                            <p class="card-text">Total Users</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(u => u.UserRole == "Admin")</h4>
                            <p class="card-text">Administrators</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-shield fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(u => u.UserRole == "Donor")</h4>
                            <p class="card-text">Donors</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-donate fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(u => u.UserRole == "Volunteer")</h4>
                            <p class="card-text">Volunteers</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-hands-helping fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Users Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>All Users</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Registration Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@user.FirstName @user.LastName</strong>
                                        @if (user.UserName == "admin@disaster.org")
                                        {
                                            <span class="badge bg-danger ms-1">System</span>
                                        }
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@(user.PhoneNumber ?? "Not provided")</td>
                                    <td>
                                        <span class="badge @GetRoleBadgeClass(user.UserRole)">@user.UserRole</span>
                                    </td>
                                    <td>@user.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge bg-success">Active</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <!-- Role Dropdown -->
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-primary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="fas fa-user-cog me-1"></i>Role
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <form method="post" action="@Url.Action("UpdateUserRole", "Admin")">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" name="newRole" value="Donor" class="dropdown-item @(user.UserRole == "Donor" ? "active" : "")">
                                                                <i class="fas fa-donate me-2"></i>Donor
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <form method="post" action="@Url.Action("UpdateUserRole", "Admin")">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" name="newRole" value="Volunteer" class="dropdown-item @(user.UserRole == "Volunteer" ? "active" : "")">
                                                                <i class="fas fa-hands-helping me-2"></i>Volunteer
                                                            </button>
                                                        </form>
                                                    </li>
                                                    <li>
                                                        <form method="post" action="@Url.Action("UpdateUserRole", "Admin")">
                                                            @Html.AntiForgeryToken()
                                                            <input type="hidden" name="userId" value="@user.Id" />
                                                            <button type="submit" name="newRole" value="Admin" class="dropdown-item @(user.UserRole == "Admin" ? "active" : "")">
                                                                <i class="fas fa-user-shield me-2"></i>Admin
                                                            </button>
                                                        </form>
                                                    </li>
                                                </ul>
                                            </div>

                                            <!-- Delete Button -->
                                            @if (user.UserName != "admin@disaster.org")
                                            {
                                                <form method="post" action="@Url.Action("DeleteUser", "Admin")" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash me-1"></i>Delete
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <button class="btn btn-sm btn-outline-secondary" disabled title="Cannot delete system admin">
                                                    <i class="fas fa-trash me-1"></i>Delete
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No users found</h5>
                    <p class="text-muted">There are no users registered in the system yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetRoleBadgeClass(string role)
    {
        return role switch
        {
            "Admin" => "bg-danger",
            "Donor" => "bg-success",
            "Volunteer" => "bg-warning",
            _ => "bg-secondary"
        };
    }
}
