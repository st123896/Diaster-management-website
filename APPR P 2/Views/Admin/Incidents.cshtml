@model IEnumerable<APPR_P_2.Models.IncidentReport>
@{
    ViewBag.Title = "Manage Incidents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-exclamation-triangle me-2"></i>Manage Incidents</h1>
                <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count()</h4>
                            <p class="card-text">Total Incidents</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(i => i.Severity == "Critical")</h4>
                            <p class="card-text">Critical</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-skull-crossbones fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(i => i.Severity == "High")</h4>
                            <p class="card-text">High Severity</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(i => i.Status == "Under Review")</h4>
                            <p class="card-text">Under Review</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-search fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Incidents Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>All Incidents</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Type</th>
                                <th>Location</th>
                                <th>Severity</th>
                                <th>Reporter</th>
                                <th>Reported Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var incident in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@incident.Title</strong>
                                        <br />
                                        <small class="text-muted">@incident.Description.Length > 50</small>
                                    </td>
                                    <td>
                                        <span class="badge @GetIncidentTypeBadgeClass(incident.IncidentType)">
                                            <i class="@GetIncidentTypeIcon(incident.IncidentType) me-1"></i>@incident.IncidentType
                                        </span>
                                    </td>
                                    <td>@incident.Location</td>
                                    <td>
                                        <span class="badge @GetSeverityBadgeClass(incident.Severity)">
                                            @incident.Severity
                                        </span>
                                    </td>
                                    <td>
                                        <strong>@incident.User?.FirstName @incident.User?.LastName</strong>
                                        <br />
                                        <small class="text-muted">@incident.User?.Email</small>
                                        @if (!string.IsNullOrEmpty(incident.PhoneNumber))
                                        {
                                            <br />
                                            <small class="text-muted">@incident.PhoneNumber</small>
                                        }
                                    </td>
                                    <td>@incident.ReportedDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge @GetStatusBadgeClass(incident.Status)">@incident.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#incidentDetailsModal-@incident.Id">
                                                <i class="fas fa-eye me-1"></i>View
                                            </button>
                                            <div class="dropdown">
                                                <button class="btn btn-sm btn-outline-warning dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                    <i class="fas fa-cog me-1"></i>Status
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-search me-2"></i>Under Review</a></li>
                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-play me-2"></i>In Progress</a></li>
                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-check me-2"></i>Resolved</a></li>
                                                    <li><a class="dropdown-item" href="#"><i class="fas fa-times me-2"></i>Closed</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                        <!-- Incident Details Modal -->
                                        <div class="modal fade" id="incidentDetailsModal-@incident.Id" tabindex="-1">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Incident Details</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <h6>Incident Information</h6>
                                                                <p>
                                                                    <strong>Title:</strong> @incident.Title<br />
                                                                    <strong>Type:</strong> 
                                                                    <span class="badge @GetIncidentTypeBadgeClass(incident.IncidentType)">
                                                                        @incident.IncidentType
                                                                    </span><br />
                                                                    <strong>Severity:</strong> 
                                                                    <span class="badge @GetSeverityBadgeClass(incident.Severity)">
                                                                        @incident.Severity
                                                                    </span><br />
                                                                    <strong>Status:</strong> 
                                                                    <span class="badge @GetStatusBadgeClass(incident.Status)">
                                                                        @incident.Status
                                                                    </span>
                                                                </p>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <h6>Location & Timing</h6>
                                                                <p>
                                                                    <strong>Location:</strong> @incident.Location<br />
                                                                    <strong>Reported Date:</strong> @incident.ReportedDate.ToString("MMM dd, yyyy")<br />
                                                                    <strong>Created Date:</strong> @incident.CreatedDate.ToString("MMM dd, yyyy HH:mm")<br />
                                                                    <strong>Phone:</strong> @(incident.PhoneNumber ?? "Not provided")
                                                                </p>
                                                            </div>
                                                        </div>
                                                        <div class="row mt-3">
                                                            <div class="col-12">
                                                                <h6>Description</h6>
                                                                <div class="card bg-light">
                                                                    <div class="card-body">
                                                                        <p class="mb-0">@incident.Description</p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="row mt-3">
                                                            <div class="col-md-6">
                                                                <h6>Reporter Information</h6>
                                                                <p>
                                                                    <strong>Name:</strong> @incident.User?.FirstName @incident.User?.LastName<br />
                                                                    <strong>Email:</strong> @incident.User?.Email<br />
                                                                    <strong>User Role:</strong> 
                                                                    <span class="badge bg-primary">@incident.User?.UserRole</span>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                        <button type="button" class="btn btn-primary">Update Status</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Incident Summary -->
                <div class="row mt-4">
                    <div class="col-md-12">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">Incident Type Distribution</h6>
                                <div class="row">
                                    @foreach (var type in Model.GroupBy(i => i.IncidentType))
                                    {
                                        <div class="col-md-3 mb-2">
                                            <span class="badge @GetIncidentTypeBadgeClass(type.Key) me-2">@type.Key</span>
                                            <span class="text-muted">@type.Count() incidents</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-exclamation-triangle fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No incidents found</h5>
                    <p class="text-muted">There are no incident reports in the system yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetIncidentTypeBadgeClass(string type)
    {
        return type switch
        {
            "Flood" => "bg-info",
            "Wildfire" => "bg-danger",
            "Earthquake" => "bg-warning",
            "Hurricane" => "bg-primary",
            "Tornado" => "bg-dark",
            "Drought" => "bg-secondary",
            "Landslide" => "bg-brown",
            "Tsunami" => "bg-purple",
            _ => "bg-secondary"
        };
    }

    public string GetIncidentTypeIcon(string type)
    {
        return type switch
        {
            "Flood" => "fas fa-water",
            "Wildfire" => "fas fa-fire",
            "Earthquake" => "fas fa-house-damage",
            "Hurricane" => "fas fa-wind",
            "Tornado" => "fas fa-tornado",
            "Drought" => "fas fa-sun",
            "Landslide" => "fas fa-mountain",
            "Tsunami" => "fas fa-wave-square",
            _ => "fas fa-exclamation-triangle"
        };
    }

    public string GetSeverityBadgeClass(string severity)
    {
        return severity switch
        {
            "Critical" => "bg-danger",
            "High" => "bg-warning",
            "Medium" => "bg-info",
            "Low" => "bg-success",
            _ => "bg-secondary"
        };
    }

    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Emergency" => "bg-danger",
            "Under Review" => "bg-warning",
            "In Progress" => "bg-info",
            "Resolved" => "bg-success",
            "Closed" => "bg-secondary",
            _ => "bg-primary"
        };
    }
}

<style>
    .bg-brown { background-color: #8B4513 !important; }
    .bg-purple { background-color: #6f42c1 !important; }
</style>