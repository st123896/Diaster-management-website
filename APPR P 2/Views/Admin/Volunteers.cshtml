@model IEnumerable<APPR_P_2.Models.VolunteerProfile>
@{
    ViewBag.Title = "Manage Volunteers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-hands-helping me-2"></i>Manage Volunteers</h1>
                <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count()</h4>
                            <p class="card-text">Total Volunteers</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-hands-helping fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(v => v.EmergencyResponse)</h4>
                            <p class="card-text">Emergency Ready</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-ambulance fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(v => v.Availability == "Immediate")</h4>
                            <p class="card-text">Immediate Availability</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-bolt fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Select(v => v.Skills).SelectMany(s => s).Distinct().Count()</h4>
                            <p class="card-text">Unique Skills</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-tools fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Volunteers Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>All Volunteers</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Volunteer</th>
                                <th>Skills</th>
                                <th>Availability</th>
                                <th>Emergency Response</th>
                                <th>Registration Date</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var volunteer in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@volunteer.User?.FirstName @volunteer.User?.LastName</strong>
                                        <br />
                                        <small class="text-muted">@volunteer.User?.Email</small>
                                        <br />
                                        <small class="text-muted">@volunteer.User?.PhoneNumber</small>
                                    </td>
                                    <td>
                                        <div class="skill-tags">
                                            @foreach (var skill in volunteer.Skills.Take(3))
                                            {
                                                <span class="badge bg-primary me-1 mb-1">@skill</span>
                                            }
                                            @if (volunteer.Skills.Count > 3)
                                            {
                                                <span class="badge bg-secondary">+@(volunteer.Skills.Count - 3) more</span>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge @GetAvailabilityBadgeClass(volunteer.Availability)">
                                            <i class="@GetAvailabilityIcon(volunteer.Availability) me-1"></i>@volunteer.Availability
                                        </span>
                                    </td>
                                    <td>
                                        @if (volunteer.EmergencyResponse)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-check me-1"></i>Yes
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">
                                                <i class="fas fa-times me-1"></i>No
                                            </span>
                                        }
                                    </td>
                                    <td>@volunteer.RegistrationDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge bg-success">@volunteer.Status</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#volunteerDetailsModal-@volunteer.Id">
                                                <i class="fas fa-eye me-1"></i>View
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </button>
                                        </div>

                                        <!-- Volunteer Details Modal -->
                                        <div class="modal fade" id="volunteerDetailsModal-@volunteer.Id" tabindex="-1">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Volunteer Details</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <h6>Personal Information</h6>
                                                                <p>
                                                                    <strong>Name:</strong> @volunteer.User?.FirstName @volunteer.User?.LastName<br />
                                                                    <strong>Email:</strong> @volunteer.User?.Email<br />
                                                                    <strong>Phone:</strong> @(volunteer.User?.PhoneNumber ?? "Not provided")<br />
                                                                    <strong>User Role:</strong> <span class="badge bg-primary">@volunteer.User?.UserRole</span>
                                                                </p>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <h6>Volunteer Information</h6>
                                                                <p>
                                                                    <strong>Availability:</strong> @volunteer.Availability<br />
                                                                    <strong>Emergency Response:</strong>
                                                                    @if (volunteer.EmergencyResponse)
                                                                    {
                                                                        <span class="badge bg-danger">Available</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="badge bg-secondary">Not Available</span>
                                                                    }
        <br />
                                                                    <strong>Status:</strong> <span class="badge bg-success">@volunteer.Status</span><br />
                                                                    <strong>Registered:</strong> @volunteer.RegistrationDate.ToString("MMM dd, yyyy")
                                                                </p>
                                                            </div>
                                                        </div>
                                                        <div class="row mt-3">
                                                            <div class="col-md-6">
                                                                <h6>Skills</h6>
                                                                <div class="skill-tags">
                                                                    @foreach (var skill in volunteer.Skills)
                                                                    {
                                                                        <span class="badge bg-primary me-1 mb-1">@skill</span>
                                                                    }
                                                                </div>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <h6>Experience</h6>
                                                                <p class="text-muted">
                                                                    @if (!string.IsNullOrEmpty(volunteer.Experience))
                                                                    {
                                                                        @volunteer.Experience
                                                                    }
                                                                    else
                                                                    {
                                                                        <em>No experience provided</em>
                                                                    }
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-hands-helping fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No volunteers found</h5>
                    <p class="text-muted">There are no volunteers registered in the system yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetAvailabilityBadgeClass(string availability)
    {
        return availability switch
        {
            "Immediate" => "bg-danger",
            "Short-term" => "bg-warning",
            "Long-term" => "bg-info",
            "Remote" => "bg-secondary",
            _ => "bg-primary"
        };
    }

    public string GetAvailabilityIcon(string availability)
    {
        return availability switch
        {
            "Immediate" => "fas fa-bolt",
            "Short-term" => "fas fa-calendar-week",
            "Long-term" => "fas fa-calendar-alt",
            "Remote" => "fas fa-laptop-house",
            _ => "fas fa-clock"
        };
    }
}
