@model IEnumerable<APPR_P_2.Models.Donation>
@{
    ViewBag.Title = "Manage Donations";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1><i class="fas fa-donate me-2"></i>Manage Donations</h1>
                <a href="@Url.Action("Index", "Admin")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count()</h4>
                            <p class="card-text">Total Donations</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-donate fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(d => d.DonationType == "financial")</h4>
                            <p class="card-text">Financial</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-money-bill-wave fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(d => d.DonationType == "supplies")</h4>
                            <p class="card-text">Supplies</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-box-open fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h4 class="card-title">@Model.Count(d => d.DonationType == "both")</h4>
                            <p class="card-text">Combined</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-hand-holding-heart fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Donations Table -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="fas fa-list me-2"></i>All Donations</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Donor</th>
                                <th>Type</th>
                                <th>Amount/Supplies</th>
                                <th>Payment Method</th>
                                <th>Donation Date</th>
                                <th>Status</th>
                                <th>Anonymous</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var donation in Model)
                            {
                                <tr>
                                    <td>
                                        @if (donation.IsAnonymous)
                                        {
                                            <span class="text-muted"><i class="fas fa-user-secret me-1"></i>Anonymous</span>
                                        }
                                        else
                                        {
                                            <strong>@donation.Donor?.FirstName @donation.Donor?.LastName</strong>
                                            <br />
                                            <small class="text-muted">@donation.Donor?.Email</small>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge @GetDonationTypeBadgeClass(donation.DonationType)">
                                            <i class="@GetDonationTypeIcon(donation.DonationType) me-1"></i>@donation.DonationType
                                        </span>
                                    </td>
                                    <td>
                                        @if (donation.DonationType == "financial" && donation.Amount.HasValue)
                                        {
                                            <strong class="text-success">@donation.Amount.Value.ToString("C")</strong>
                                        }
                                        else if (donation.DonationType == "supplies" && donation.Supplies.Any())
                                        {
                                            <div>
                                                @string.Join(", ", donation.Supplies.Take(2))
                                                @if (donation.Supplies.Count > 2)
                                                {
                                                    <span class="text-muted">+@(donation.Supplies.Count - 2) more</span>
                                                }
                                            </div>
                                        }
                                        else if (donation.DonationType == "both")
                                        {
                                            <div>
                                                <div class="text-success">@donation.Amount?.ToString("C")</div>
                                                <small class="text-muted">
                                                    @string.Join(", ", donation.Supplies.Take(1))
                                                    @if (donation.Supplies.Count > 1)
                                                    {
                                                        <span>+@(donation.Supplies.Count - 1) more</span>
                                                    }
                                                </small>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(donation.PaymentMethod))
                                        {
                                            <span class="badge bg-secondary">@donation.PaymentMethod</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                    <td>@donation.DonationDate.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <span class="badge bg-success">@donation.Status</span>
                                    </td>
                                    <td>
                                        @if (donation.IsAnonymous)
                                        {
                                            <i class="fas fa-check text-success"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times text-muted"></i>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-sm btn-outline-primary" data-bs-toggle="modal" data-bs-target="#donationDetailsModal-@donation.Id">
                                                <i class="fas fa-eye me-1"></i>View
                                            </button>
                                            <button type="button" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit me-1"></i>Edit
                                            </button>
                                        </div>

                                        <!-- Donation Details Modal -->
                                        <div class="modal fade" id="donationDetailsModal-@donation.Id" tabindex="-1">
                                            <div class="modal-dialog modal-lg">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Donation Details</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <h6>Donor Information</h6>
                                                                <p>
                                                                    <strong>Name:</strong>
                                                                    @(donation.IsAnonymous ? "Anonymous" : $"{donation.Donor?.FirstName} {donation.Donor?.LastName}")<br />
                                                                    <strong>Email:</strong>
                                                                    @(donation.IsAnonymous ? "Hidden" : donation.Donor?.Email)<br />
                                                                    <strong>Phone:</strong>
                                                                    @(donation.IsAnonymous ? "Hidden" : donation.Donor?.PhoneNumber ?? "Not provided")
                                                                </p>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <h6>Donation Details</h6>
                                                                <p>
                                                                    <strong>Type:</strong> @donation.DonationType<br />
                                                                    <strong>Amount:</strong> @(donation.Amount?.ToString("C") ?? "N/A")<br />
                                                                    <strong>Payment Method:</strong> @(donation.PaymentMethod ?? "N/A")<br />
                                                                    <strong>Date:</strong> @donation.DonationDate.ToString("MMM dd, yyyy HH:mm")
                                                                </p>
                                                            </div>
                                                        </div>
                                                        @if (donation.Supplies.Any() || !string.IsNullOrEmpty(donation.AdditionalSupplies))
                                                        {
                                                            <div class="row mt-3">
                                                                <div class="col-12">
                                                                    <h6>Supplies Information</h6>
                                                                    @if (donation.Supplies.Any())
                                                                    {
                                                                        <p><strong>Supplies:</strong> @string.Join(", ", donation.Supplies)</p>
                                                                    }
                                                                    @if (!string.IsNullOrEmpty(donation.AdditionalSupplies))
                                                                    {
                                                                        <p><strong>Additional Supplies:</strong> @donation.AdditionalSupplies</p>
                                                                    }
                                                                </div>
                                                            </div>
                                                        }
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Total Donations Summary -->
                <div class="row mt-4">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">Financial Donations Summary</h6>
                                <h4 class="text-success">@Model.Where(d => d.Amount.HasValue).Sum(d => d.Amount.Value).ToString("C")</h4>
                                <p class="text-muted mb-0">Total monetary donations received</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title">Supplies Donations Summary</h6>
                                <h4 class="text-info">@Model.Sum(d => d.Supplies.Count)</h4>
                                <p class="text-muted mb-0">Total supply items donated</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="fas fa-donate fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">No donations found</h5>
                    <p class="text-muted">There are no donations recorded in the system yet.</p>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    public string GetDonationTypeBadgeClass(string type)
    {
        return type switch
        {
            "financial" => "bg-success",
            "supplies" => "bg-info",
            "both" => "bg-warning",
            _ => "bg-secondary"
        };
    }

    public string GetDonationTypeIcon(string type)
    {
        return type switch
        {
            "financial" => "fas fa-money-bill-wave",
            "supplies" => "fas fa-box-open",
            "both" => "fas fa-hand-holding-heart",
            _ => "fas fa-donate"
        };
    }
}